@page "/people"

<h3 class="mb-3">PeopleEntry</h3>

<EditForm Model="model" OnValidSubmit="ValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <InputText @bind-Value="model.FirstName" placeholder="First Name" class="form-control mb-2 w-auto"/>
    <InputText @bind-Value="model.LastName" placeholder="Last Name" class="form-control mb-2 w-auto" />

    <button class="btn btn-primary" type="submit">Submit</button>
</EditForm>

<h3 class="mt-5">List of People</h3>
<ul>
    @foreach (PersonModel person in people)
    {
        <li>@person.FirstName @person.LastName</li>
    }
</ul>

@code {
    public PersonModel model = new();
    private List<PersonModel> people = new();

    private void ValidSubmit()
    {
        people.Add(model);
        model = new();
    }
}
